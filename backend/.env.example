# Environment Configuration for CloudNet Monitor

# Node.js Environment
NODE_ENV=development
PORT=3001

# JWT Secret (change in production)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# Allowed Origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Log Level
LOG_LEVEL=info

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cloudnet_monitor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# InfluxDB Configuration
INFLUX_HOST=localhost
INFLUX_PORT=8086
INFLUX_DB=cloudnet_metrics
INFLUX_USER=
INFLUX_PASSWORD=

# AWS Configuration (for cloud deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@cloudnet-monitor.com

# Monitoring Configuration
DEFAULT_SNMP_COMMUNITY=public
DEFAULT_POLL_INTERVAL=60000
MAX_CONCURRENT_POLLS=10

# Security Configuration
API_RATE_LIMIT=100
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key

# Valid API Keys (comma-separated for automated systems)
VALID_API_KEYS=api-key-1,api-key-2

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_FLOW_MONITORING=true
ENABLE_PACKET_CAPTURE=false
ENABLE_CLOUD_INTEGRATION=false